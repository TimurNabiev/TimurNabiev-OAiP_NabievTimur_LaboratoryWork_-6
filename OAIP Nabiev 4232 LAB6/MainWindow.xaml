<Window x:Class="OAIP_Nabiev_4232_LAB6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OAIP_Nabiev_4232_LAB6"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <TabControl Background="LightCyan">
        <TabItem Header="Задание 2.1.8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <TextBlock TextWrapping="Wrap" Text="2.1.8 Напишите программу, которая принимает длины трех сторон
треугольника и определяет его тип:«равносторонний», «равнобедренный» или «разносторонний»"/>
                </DockPanel>
                <StackPanel  HorizontalAlignment="Left" Grid.Column="2" Grid.Row="1" >
                    <TextBlock Text="Введите первую сторону"/>
                    <TextBox x:Name="First_side"/>
                    <TextBlock Text="Введите вторую сторону"/>
                    <TextBox x:Name="Second_Side"/>
                    <TextBlock Text="Введите третью сторону"/>
                    <TextBox x:Name="Third_Side"/>
                </StackPanel>
                <Button Grid.ColumnSpan="4" Grid.Row="2" Content="Узнать результат" Click="Result"/>
            </Grid>
        </TabItem>
        <TabItem Header="Задание 2.2.2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock  Grid.Row="0"  TextWrapping="Wrap" Text="2.2.2 Дано натуральное число n. Проверить, является ли оно
совершенным (число называется совершенным, если оно равно
сумме всех своих делителей)"/>
                <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center">
                    <TextBlock Text="Введите число"/>
                    <TextBox x:Name="Number"/>
                </StackPanel>
                <Button Grid.ColumnSpan="4" Grid.Row="2" Content="Узнать результат" Click="Check"/>
            </Grid>
        </TabItem>
        <TabItem Header="Задание 3.1.17">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock  Grid.Row="0"  TextWrapping="Wrap" Text="3.1.17 Заменить все отрицательные элементы на их абсолютные
значения, затем найти минимальный элемент и его индекс"/>
                <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Введите количество элементов массива"/>
                    <TextBox x:Name="Count_Array"/>
                    <TextBlock Text="Введите массив через запятую"/>
                    <TextBox x:Name="Array"/>
                </StackPanel>
                <Button Grid.ColumnSpan="4" Grid.Row="2" Content="Узнать результат" Click="Replace"/>
                <ListBox x:Name="It_Arr" Grid.Row="1" Grid.Column="0"/>
                <TextBlock x:Name="It_MinEl" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBlock x:Name="It_Index" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </Grid>
        </TabItem>
        <TabItem Header="Задание 3.2.9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock  Grid.Row="0"  TextWrapping="Wrap" Text="3.2.9 Дана действительная квадратная матрица порядка 9. Вычислить
сумму тех из ее элементов, расположенных на главной
диагонали и выше неё, которые превосходят по величине все
элементы, расположенные ниже главной диагонали. Если на
главной диагонали и выше неё нет элементов с указанным
свойством, то вывести сообщение о том, что такого элемента нет
в матрице"/>
                <TextBlock Grid.Row="1" Text="Исходный массив"/>
                <TextBlock Grid.Row="2" x:Name="OriginalArray"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="Результат"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="Arr_Res"/>
                <Button Grid.Row="0" Grid.Column="1" Content="Узнать результат" Click="ArrRes"/>
            </Grid>
        </TabItem>
        <TabItem Header="Задание 4.3.10">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   TextWrapping="Wrap"
                   Text="Поворот матрицы на 90° против часовой стрелки.
Введите размеры, матрица заполнится случайными числами (-50..50)."/>
                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Количество строк"/>
                    <TextBox x:Name="CountRow"/>
                    <TextBlock Text="Количество столбцов"/>
                    <TextBox x:Name="CountCol"/>
                    <Button Content="Результат" Click="Turn"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Исходный массив"/>
                    <TextBlock x:Name="Before90" />
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1">
                    <TextBlock Text="После поворота"/>
                    <TextBlock x:Name="After90"/>
                </StackPanel>
            </Grid>
        </TabItem>
        <TabItem Header="Задание 5.1.11">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock  Grid.Row="0"  TextWrapping="Wrap" Text="5.1.11 Линейное уравнение y = Ax + B. Поле first –
вещественное число, коэффициент A; поле second – вещественное число,
коэффициент B. Реализовать метод function() – вычисление корня линейного
уравнения."/>
                <StackPanel Grid.ColumnSpan="2" HorizontalAlignment="Left" Grid.Column="2" Margin="167,135,0,135" Grid.RowSpan="3">
                    <TextBlock Text="Введите коэффциент А"/>
                    <TextBox x:Name="Arg1"/>
                    <TextBlock Text="Введите коэффициент B"/>
                    <TextBox x:Name="Arg2"/>
                </StackPanel>
                <Button Grid.ColumnSpan="4" Grid.Row="2" Content="Узнать результат" Click="Equat"/>
                <TextBlock x:Name="Itog" Grid.Row="1" Grid.Column="0"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
